<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:paddingTop="2sp"
    android:paddingBottom="2sp"
    android:paddingLeft="4sp"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="50sp"
        android:layout_height="50sp" android:src="@drawable/stub" android:scaleType="centerCrop"
    />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:paddingTop="0sp"
        android:paddingBottom="2sp"
        android:paddingLeft="4sp"
        android:paddingRight="4sp"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/infotext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" android:layout_gravity="left|center_vertical" android:layout_marginLeft="10sp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
        />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:paddingTop="0sp"
            android:paddingBottom="2sp"
            android:paddingLeft="4sp"
            android:gravity="right"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/statustext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical" android:layout_marginLeft="10sp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
            />

            <ImageView
                android:id="@+id/statusimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5sp"
                android:paddingRight="5sp"
                android:layout_gravity="right|center_vertical" android:layout_marginLeft="10sp"
                android:visibility="gone"
            />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
