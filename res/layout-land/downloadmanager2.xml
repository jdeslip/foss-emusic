<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:background="@drawable/back1"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/backbottom"
            >

            <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/icon"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingTop="4sp"
                android:paddingRight="3sp"
                android:paddingLeft="3sp"
                android:src="@drawable/emdtop"
            />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="3sp"
                android:paddingLeft="3sp"
                >

                <TextView  
                    android:id="@+id/mbavailable"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="@string/loading_pbar"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                />

            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pbar2"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingBottom="0sp"
                android:paddingTop="4sp"
                android:visibility="invisible"
                >

                <ProgressBar
                    android:textStyle="bold"
                    android:indeterminate="true"
                    android:indeterminateOnly="true"
                    android:paddingLeft="4sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleSmall"
                    android:adjustViewBounds="true"
                    android:gravity="bottom"
                />

                <TextView  
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingBottom="0sp"
                    android:paddingLeft="2sp"
                    android:text="@string/loading_pbar"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0sp"
            android:paddingBottom="0sp"
            >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                >

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >

                    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/pausebutton"
                        android:paddingLeft="5sp"
                        android:src="@drawable/restart"
                        android:onClick="pausePressed"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        >

                        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content"
                            android:src="@drawable/emusicjsmall"
                        />

                    </LinearLayout>

                </LinearLayout>

                <TextView  
                    android:id="@+id/status_textview"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingTop="2sp"
                    android:paddingBottom="2sp"
                    android:paddingLeft="2sp"
                    android:text="Status:"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                />

                <TextView  
                    android:id="@+id/header_textview"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingTop="2sp"
                    android:paddingBottom="2sp"
                    android:paddingLeft="2sp"
                    android:text="Status:"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                />    

                <ListView
                    android:id="@+id/downloadlist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="false"
                    android:layout_weight="0.5"
                    android:scrollingCache="false"
                    android:animationCache="false"
                />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
